{
  "name": "@hakit/components",
  "type": "module",
  "version": "1.0.7",
  "private": false,
  "keywords": [
    "react",
    "homeassistant",
    "home-assistant",
    "home-automation",
    "socket",
    "component",
    "library",
    "api",
    "ha-component-kit",
    "hakit/core",
    "hakit/components",
    "dashboard",
    "custom"
  ],
  "description": "A series of components to work with @hakit/core",
  "main": "dist/hakit-components.umd.js",
  "module": "dist/hakit-components.es.js",
  "types": "dist/types/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/hakit-components.es.js",
      "require": "./dist/hakit-components.umd.js",
      "types": "./dist/types/index.d.cts"
    }
  },
  "author": "Shannon Hochkins <mail@shannonhochkins.com>",
  "license": "ISC",
  "files": [
    "dist",
    "README.md",
    "LICENCE.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shannonhochkins/ha-component-kit"
  },
  "bugs": {
    "url": "https://github.com/shannonhochkins/ha-component-kit/issues"
  },
  "homepage": "https://shannonhochkins.github.io/ha-component-kit#readme",
  "scripts": {
    "dev": "vite",
    "prebuild": "rm -rf ./dist && npm run prettier",
    "build": "NODE_ENV=production vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier \"src/**/*.{ts,tsx}\" --write && git status",
    "postbuild": "tsup src/index.ts --dts-only --dts-resolve --d dist/types && tsc",
    "release": "npm publish --access public",
    "test": "NODE_ENV=test jest --rootDir=src"
  },
  "peerDependencies": {
    "@emotion/react": ">=10.x",
    "@emotion/styled": ">=10.x",
    "lodash": ">=4.x",
    "react": ">=16.x",
    "react-dom": ">=16.x",
    "react-router-dom": ">=6.x",
    "@hakit/core": ">=1.0.4",
    "framer-motion": ">=10.x",
    "react-use": ">=17.x"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.x"
  }
}
