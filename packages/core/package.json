{
  "name": "@hakit/core",
  "version": "1.0.9",
  "private": false,
  "type": "module",
  "keywords": [
    "react",
    "homeassistant",
    "home-assistant",
    "home-automation",
    "socket",
    "component",
    "library",
    "api",
    "ha-component-kit",
    "hakit/core",
    "hakit/components",
    "dashboard",
    "custom"
  ],
  "bin": {
    "hakit-sync-types": "./dist/sync/cli/cli.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "description": "A collection of React hooks and helpers for Home Assistant to easily communicate with the Home Assistant WebSocket API.",
  "main": "dist/hakit-core.umd.cjs",
  "module": "dist/hakit-core.es.js",
  "types": "dist/types/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/hakit-core.es.js",
      "require": "./dist/hakit-core.umd.cjs",
      "types": "./dist/types/index.d.cts"
    },
    "./sync": {
      "types": "./dist/sync/node/index.d.ts",
      "import": "./dist/sync/node/index.js",
      "require": "./dist/sync/node/index.cjs"
    }
  },
  "author": "Shannon Hochkins <mail@shannonhochkins.com>",
  "license": "ISC",
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENCE.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shannonhochkins/ha-component-kit"
  },
  "bugs": {
    "url": "https://github.com/shannonhochkins/ha-component-kit/issues"
  },
  "homepage": "https://shannonhochkins.github.io/ha-component-kit#readme",
  "scripts": {
    "dev": "vite",
    "prebuild": "rm -rf ./dist && npm run prettier",
    "build": "npm run build:core && npm run build:sync-script",
    "build:core": "NODE_ENV=production vite build",
    "build:core-types": "tsup src/index.ts --dts-only --dts-resolve --d dist/types && tsc",
    "build:sync-script": "NODE_ENV=production vite --config ./bin/vite-node.config.ts build",
    "build:sync-script-types": "tsup bin/cli.ts --format esm --d dist/sync/cli",
    "watch:build": "NODE_ENV=production vite build --watch",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier \"src/**/*.{ts,tsx}\" --write && git status",
    "test": "NODE_ENV=test jest --rootDir=src",
    "postbuild": "npm run build:core-types && npm run build:sync-script-types",
    "release": "npm publish --access public"
  },
  "peerDependencies": {
    "@iconify/react": ">=4.x",
    "home-assistant-js-websocket": ">=8.x",
    "javascript-time-ago": ">=2.x",
    "lodash": ">=4.x",
    "react": ">=16.x",
    "react-dom": ">=16.x",
    "react-router-dom": ">=6.x",
    "use-debounce": ">=9.x",
    "ws": "^8.13.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@liuli-util/vite-plugin-node": "^0.6.0",
    "@swc/core": "^1.3.78",
    "@types/javascript-time-ago": "^2.0.3",
    "@types/ws": "^8.5.5",
    "home-assistant-js-websocket": "^8.1.0",
    "prettier": "^3.0.2",
    "tsup": "^7.1.0"
  }
}
