{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "skipLibCheck": true,
  },
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["ES2022"],
      "module": "ES2022",
      "moduleResolution": "node",
      "target": "ES2022"
    }
  },
  "rootDir": "./src",
  "include": ["src", ".d.ts", "bin", "mocks", "../../.d.ts"],
  "exclude": [
    "node_modules"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}