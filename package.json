{
  "name": "@hakit/monorepo",
  "workspaces": [
    "packages/core",
    "packages/components"
  ],
  "keywords": [
    "react",
    "homeassistant",
    "home-assistant",
    "home-automation",
    "socket",
    "component",
    "library",
    "api",
    "ha-component-kit",
    "@hakit/core",
    "@hakit/components",
    "dashboard",
    "custom"
  ],
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "test:components": "npm run test --workspace=@hakit/components",
    "test:core": "npm run test --workspace=@hakit/core",
    "build": "npm run build:core && npm run build:components",
    "build:core": "npm run build --workspace=@hakit/core",
    "build:components": "npm run build --workspace=@hakit/components",
    "watch:build:components": "npm run watch:build --workspace=@hakit/components",
    "watch:build:core": "npm run watch:build --workspace=@hakit/core",
    "start": "npm run storybook",
    "dev": "npm run storybook && npm run dev --workspaces --if-present",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "BUILD_STORYBOOK=true storybook build",
    "release": "npm run release --workspaces --if-present",
    "release:core": "npm run release --workspace=@hakit/core",
    "release:components": "npm run release --workspace=@hakit/components",
    "test:dashboard": " cd test-dashboard && npm start"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@emotion/jest": "^11.11.0",
    "@mui/material": "^5.13.6",
    "@storybook/addon-controls": "^7.0.24",
    "@storybook/addon-docs": "^7.0.24",
    "@storybook/addon-essentials": "^7.0.25",
    "@storybook/addon-interactions": "^7.0.25",
    "@storybook/addon-links": "^7.0.25",
    "@storybook/addon-mdx-gfm": "^7.0.24",
    "@storybook/addon-styling": "^1.3.2",
    "@storybook/blocks": "^7.0.25",
    "@storybook/builder-vite": "^7.0.24",
    "@storybook/react": "^7.0.25",
    "@storybook/react-vite": "^7.0.25",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.1",
    "@types/react": "^18.x",
    "@types/react-dom": "^18.x",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-storybook": "^0.6.12",
    "framer-motion": "^10.13.0",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jest-localstorage-mock": "^2.4.26",
    "jsx-to-string": "^1.4.0",
    "prettier": "^2.8.8",
    "react": "^18.x",
    "react-dom": "^18.x",
    "react-use": "^17.4.0",
    "storybook": "^7.0.25",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "type-fest": "^3.12.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-linter": "^2.0.2",
    "vite-tsconfig-paths": "^4.2.0"
  }
}
