{
  "name": "ha-component-kit",
  "version": "1.0.11",
  "type": "module",
  "keywords": [
    "react",
    "homeassistant",
    "home-assistant",
    "home-automation",
    "socket",
    "component",
    "library",
    "api"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "description": "A collection of React components for Home Assistant to easily communicate with the Home Assistant WebSocket API.",
  "main": "dist/ha-component-kit.umd.js",
  "module": "dist/ha-component-kit.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ha-component-kit.es.js",
      "require": "./dist/ha-component-kit.umd.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "author": "Shannon Hochkins <mail@shannonhochkins.com>",
  "license": "ISC",
  "files": [
    "dist",
    "README.md",
    "LICENCE.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shannonhochkins/ha-component-kit"
  },
  "bugs": {
    "url": "https://github.com/shannonhochkins/ha-component-kit/issues"
  },
  "homepage": "https://shannonhochkins.github.io/ha-component-kit#readme",
  "scripts": {
    "start": "npm run storybook",
    "dev": "vite",
    "prebuild": "rm -rf ./dist && npm run prettier",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "prettier": "prettier \"src/**/*.{ts,tsx}\" --write && git status",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "BUILD_STORYBOOK=true storybook build",
    "build:ha-types": "npx tsx ./scripts/ha-types.ts && npx prettier --write './src/types/supported-services.ts'",
    "sync:ha-helpers": "npx tsx ./scripts/sync-ha-helpers.ts"
  },
  "peerDependencies": {
    "@emotion/react": ">=10.x",
    "@emotion/styled": ">=10.x",
    "@iconify/react": ">=4.x",
    "home-assistant-js-websocket": ">=8.x",
    "javascript-time-ago": ">=2.x",
    "lodash": ">=4.x",
    "react": ">=16.x",
    "react-dom": ">=16.x",
    "react-thermostat": ">=1.x",
    "use-debounce": ">=9.x"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.11.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/material": "^5.13.6",
    "@storybook/addon-controls": "^7.0.24",
    "@storybook/addon-docs": "^7.0.24",
    "@storybook/addon-essentials": "^7.0.25",
    "@storybook/addon-interactions": "^7.0.25",
    "@storybook/addon-links": "^7.0.25",
    "@storybook/addon-mdx-gfm": "^7.0.24",
    "@storybook/addon-styling": "^1.3.2",
    "@storybook/blocks": "^7.0.25",
    "@storybook/builder-vite": "^7.0.24",
    "@storybook/react": "^7.0.25",
    "@storybook/react-vite": "^7.0.25",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@types/javascript-time-ago": "^2.0.3",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.3.1",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "eslint-plugin-storybook": "^0.6.12",
    "home-assistant-js-websocket": "^8.1.0",
    "jsx-to-string": "^1.4.0",
    "node-scp": "^0.0.22",
    "prettier": "^2.8.8",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.25",
    "ts-node": "^10.9.1",
    "type-fest": "^3.12.0",
    "typescript": "^5.0.2",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0",
    "vite-plugin-linter": "^2.0.2",
    "vite-tsconfig-paths": "^4.2.0"
  }
}
